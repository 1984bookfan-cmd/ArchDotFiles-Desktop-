* {
    border: none;
    font-family: "Segoe UI", "Ubuntu";
    font-size: 14px;
    color: #ffffff;
    border-radius: 0px;
}

window#waybar {
    background: rgba(0, 0, 0, 0);
}
/*-----module groups----*/
#workspaces button {
    background-color: rgba(0,0,0,0.8);
    border-radius: 10px;
}
#workspaces button.focused {
    background-color: rgba(204,51,255,0.8);
}
#workspaces button.active {
    background: rgba(51,204,255,0.8);
    color: white;  
}
#workspaces button:hover {
    background: rgba(204,51,255,0.8);
    color: white;
}

/* Default: no rounding for all buttons */
#workspaces button {
    border-radius: 0;
    margin: 0 0px; /* optional spacing between buttons */
}

/* Single workspace only: full rounding */
#workspaces button:only-child {
    padding: 8px 5px;  /* top/bottom = 8px, left/right = 16px from perimeter */
    margin-top: 3px;
    margin-bottom: 3px;
    border-radius: 10px;
}

/* First workspace, but only if not the only child */
#workspaces button:first-child:not(:only-child) {
    padding: 8px 3px;  /* top/bottom = 8px, left/right = 16px from perimeter */
    margin-top: 3px;
    margin-bottom: 3px;
    border-radius: 10px 0 0 10px;
}

/* Last workspace, but only if not the only child */
#workspaces button:last-child:not(:only-child) {
    padding: 8px 3px;  /* top/bottom = 8px, left/right = 16px from perimeter */
    margin-top: 3px;
    margin-bottom: 3px;
    border-radius: 0 10px 10px 0;
}

/* Middle workspaces (between first and last) */
#workspaces button:not(:first-child):not(:last-child) {
    padding: 8px 3px;  /* top/bottom = 8px, left/right = 16px from perimeter */
    margin-top: 3px;
    margin-bottom: 3px;
    border-radius: 0;
}







